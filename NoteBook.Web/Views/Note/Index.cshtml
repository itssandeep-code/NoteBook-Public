@model IEnumerable<NoteBook.Web.ViewModels.NoteViewModel>
<section class="content-header">
    <h1>
        Contacts
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Notes</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Notes</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="notesTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                @*<th>Id</th>*@
                                <th>Subject</th>
                                <th>Description</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>@Html.DisplayFor(modelItem => item.Id)</td>*@
                                    <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>
                                        <a asp-controller="Note" asp-action="Create" asp-route-id="@item.Id"
                                           class="btn btn-primary btn-sm">Edit</a> | <a href="" class="btn btn-primary btn-sm" onclick="Delete('@item.Id')">Delete</a>
                                    </td>


                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
    $(function () {
        $('#notesTable').DataTable({
            "scrollX": true,
            "info": false,
            "ordering": false,
            "searching": false
        });
    });
    function Delete(id){
        var r = confirm("Are you sure you want to Delete?");
        if (r == true) {

            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("Delete", "Note")',
                data: {
                    Id: id
                },
                error: function (result) {
                    alert("error");
                },
                success: function (result) {
                    if (result == true) {
                        window.location.reload();
                    }
                    else {
                        alert("There is a problem, Try Later!");
                    }
                }
            });
        }
    }
</script>